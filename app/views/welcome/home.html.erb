<div class="container">
  <div class="row">
    <h1 class="text-center">Discover new Artists</h1>
  </div>

<div class="row">
  <div class="well well-lg col-xs-6 col-xs-offset-3">
    <%= form_tag artists_path, method: "get", html: { class: "form" } do %>
     <div class="col-xs-8">
       <%= text_field_tag(:artist_name, "", placeholder: "Enter artist name", class: "form-control") %>
     </div>
     <div class="col-xs-4">
       <%= submit_tag "Search", class: "form-control btn btn-block btn-primary" %>
     </div>
    <% end %>
  </div>
</div>




</div>
