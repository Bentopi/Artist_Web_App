<div class="container">

  <div class="page-header">
    <h1><%= @artist.name %></h1>
  </div>

  <% @artist.albums(country: 'US').each do |album| %>
  <div class="row">
    <div class="col-xs-4 col-sm-3">
        <%= image_tag(album.images.first["url"], :class => "album-image") %>
    </div>

    <div class="col-xs-6 col-sm-8">
      <h3><%= album.name %></h3> <br>
      Released on : <%= album.release_date %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-xs-offset-1">
      <% album.tracks.each do |track| %>
      <%= track.track_number %> - <%= track.name %><br>
      <% end %>
    </div>

  </div>

  <hr>
  <% end %>
</div>
